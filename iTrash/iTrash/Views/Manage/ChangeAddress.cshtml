@model iTrash.Models.ChangeAddressViewModel
@{ 
    ViewBag.Title = "Change Address";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangeAddress", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Address Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(m => m._StreetAddress1, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m._StreetAddress1, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._StreetAddress1)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m._StreetAddress2, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m._StreetAddress2, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._StreetAddress2)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m._CityID, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m._CityID, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._CityID)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m._StateID, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.DropDownListFor(m => m._StateID, Model.states, "Select State", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m._StateID)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m._ZipcodeID, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m._ZipcodeID, new { minlength = 5, maxlength = 5, @type = "number", @class = "form-control" })
        @Html.ValidationMessageFor(m => m._ZipcodeID)
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Number, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Number, new { minlength = 10, maxlength = 10, @type = "number", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Number)
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" class="btn btn-default" value="Save changes" />
        </div>
    </div>
</div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}