@model iTrash.Models.PersonalSettingsViewModel
@{
    ViewBag.Title = "Manage";
}

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <ul class="nav nav-tabs">
        @if (Model.role == 0 || Model.role == 2)
        {
            <li>@Html.ActionLink("Account", "Index", "Manage")</li>
            <li class="active">@Html.ActionLink("Personal", "PersonalSettings", "Manage")</li>
            <li>@Html.ActionLink("Pickup", "PickupSettings", "Manage")</li>
            <li>@Html.ActionLink("Billing", "BillingInfoSettings", "Manage")</li>
        }
        @if (Model.role > 0)
        {
            <li>@Html.ActionLink("Route", "Route", "Manage")</li>
        }
    </ul>
    <div>
        <h2>Personal Settings</h2>
        <hr />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change address" class="btn btn-default" />
        </div>
    </div>
</div>
