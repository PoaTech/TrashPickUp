
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChoosenDate</title>
</head>
<body>
    <div>
        @model DateTime
        Using Date Template
        @Html.TextBox("", String.Format("{0:d}", Model.ToShortDateString()),
  new { @class = "datefield", type = "date" }) 
    </div>
</body>
</html>
